
{
  "name": "manicode",
  "version": "1.0.0",
  "description": "Manicode client package",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "manicode": "dist/manicode.js"
  },
  "scripts": {
    "build": "yarn build:common && yarn build:manicode && yarn dist:copy",
    "build:common": "cd ../common && yarn build && cd ../manicode",
    "build:manicode": "tsc",
    "dist:copy": "mkdir -p dist/common && cp -r ../common/dist/ dist/common && cp package.json dist && cp ../yarn.lock dist",
    "clean": "rm -rf dist",
    "prepublishOnly": "yarn build",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\""
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "common": "1.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.6",
    "@types/node": "^20.14.10",
    "typescript": "5.3.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
