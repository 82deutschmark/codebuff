{
  "name": "backend",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --build",
        "cwd": "backend"
      }
    },
    "start": {
      "executor": "@codebuff/build-tools:infisical-run",
      "options": {
        "command": "bun src/index.ts",
        "cwd": "backend"
      },
      "dependsOn": ["@codebuff/build-tools:build"]
    },
    "dev": {
      "executor": "@codebuff/build-tools:infisical-run",
      "options": {
        "command": "bun src/index.ts",
        "cwd": "backend"
      },
      "dependsOn": ["@codebuff/build-tools:build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test $(find src -name *.test.ts)",
        "cwd": "backend"
      }
    }
  },
  "implicitDependencies": ["common", "@codebuff/internal"]
}
