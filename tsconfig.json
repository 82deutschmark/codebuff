{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "incremental": true,
    "isolatedModules": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@manicode/common": ["common/src"]
    },
    "outDir": "./dist"
  },
  "include": ["index.ts", "src/**/*"],
  "references": [
    { "path": "./common" },
    { "path": "./backend" }
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
  