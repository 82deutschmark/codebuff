{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "backend/*": ["../backend/src/*"],
      "common/*": ["../common/src/*"]
    },
    "types": ["bun-types"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
