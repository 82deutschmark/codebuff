{
  "name": "common",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "common"
      },
      "dependsOn": ["root:build-env"]
    },
    "db-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "if command -v infisical >/dev/null 2>&1; then infisical run --log-level=warn -- drizzle-kit push --config=./src/db/drizzle.config.ts; else drizzle-kit push --config=./src/db/drizzle.config.ts; fi"
        ],
        "cwd": "common",
        "parallel": false
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test $(find src -name *.test.ts)",
        "cwd": "common"
      }
    }
  }
}
